  <li class="twitter" onclick="RCApp.send_ga_event( 'DailyRC_share', 'click', 'web_tw_1523_by_3429062');">
    <a href="http://twitter.com/share?count=horizontal&amp;url=http://roomclip.jp/daily/1523&amp;text=Daily RoomClip vol. 1523&amp;" onclick="window.open(this.href, 'TWwindow', 'width=650, height=450, menubar=no, toolbar=no, scrollbars=yes'); return false;">
      <span class="icon"></span>
      <span class="sns-name">Twitter</span>
      <span class="sns-action">ツイートする</span>
  </a>
  </li>
  <li class="facebook" onclick="RCApp.send_ga_event( 'DailyRC_share', 'click', 'web_fb_1523_by_3429062');">
    <a href="http://www.facebook.com/share.php?u=http://roomclip.jp/daily/1523" onclick="window.open(this.href, 'FBwindow', 'width=650, height=450, menubar=no, toolbar=no, scrollbars=yes'); return false;">
      <span class="icon"></span>
      <span class="sns-name">facebook</span>
      <span class="sns-action">いいね！</span>
  </a>
  </li>
  <li class="hatena" onclick="RCApp.send_ga_event( 'DailyRC_share', 'click', 'web_hb_1523_by_3429062');">
    <a target="_blank" href="http://b.hatena.ne.jp/entry.touch/http://roomclip.jp/daily/1523" onclick="window.open(this.href, 'TWwindow', 'width=650, height=450, menubar=no, toolbar=no, scrollbars=yes'); return false;">
      <span class="icon"></span>
      <span class="sns-name">はてな</span>
      <span class="sns-action">ブックマークする</span>
  </a>
  </li>
